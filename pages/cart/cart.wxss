page {
  background-color: #fff;
  font-family: "Helvetica Neue",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "\9ED1\4F53",
                 Arial,
                 sans-serif;
  font-size: 32rpx;
}

.navigator-hover {
  background: none;
}

.cart-box {
  padding-bottom: 100rpx;
}

.cart-list {
  position: relative;
  padding: 30rpx 20rpx 30rpx 250rpx;
  height: 150rpx;
  border-top: 1px solid #f0f0f2;
}

.cart-list .cart-pro-select {
  position: absolute;
  left: 20rpx;
  top: 90rpx;
  width: 45rpx;
  height: 45rpx;
}

.cart-list .cart-thumb {
  position: absolute;
  top: 35rpx;
  left: 85rpx;
  width: 146rpx;
  height: 146rpx;
}

.cart-list .cart-pro-name {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 50rpx;
  font-size: 24rpx;
}

.cart-list .cart-pro-price {
  display: inline-block;
  /* height: 105rpx; */
  line-height: 50rpx;
  font-size: 24rpx;
  width: 100%;
  color: red;
}

.cart-pro-buynum {
  display: inline-block;
  /* height: 105rpx; */
  line-height: 50rpx;
  font-size: 24rpx;
  width: 100%;
}

.cart-list .cart-count-box {
  position: absolute;
  bottom: 24rpx;
  width: 236rpx;
  height: 50rpx;
  line-height: 50rpx;
  right: 0;
}

.cart-list .cart-count-box text {
  display: inline-block;
  line-height: 54rpx;
  text-align: center;
  /* border:1px solid #f0f0f2; */
}

.cart-count-down, .cart-count-add {
  font-size: 30rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1rpx solid #f0f0f2;
}

.cart-count-num {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-top: 1rpx solid #f0f0f2;
  border-bottom: 1rpx solid #f0f0f2;
  position: relative;
  top: -1rpx;
  font-size:24rpx;

}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 100rpx 0 80rpx;
  box-sizing: border-box;
  background: #fff;
  color: #000;
  border-top: 1rpx solid #f0f0f2;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}
.total-select2{
   position: absolute;
  left: 20rpx;
  top:18rpx;
  width: 45rpx;
  height: 45rpx;
}
.order-icon {
  position: absolute;
  right: 40rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-icon image, .order-icon navigator {
  display: block;
  width: 45rpx;
  height: 45rpx;
}

.cart-toatl-price {
  float: right;
  width: 120rpx;
  color: red;
}

.cart-no-data {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}

.title {
  height: 90rpx;
  line-height: 90rpx;
  margin: auto;
  width: 92.5%;
}

.cop_name {
  display: inline-block;
  text-indent: 55rpx;
  font-size: 28rpx;
}

.edit {
  float: right;
  font-size: 30rpx;
}

.settlement {
  display: inline-block;
  position: absolute;
  right: 0;
  background: #09b76b;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  width: 32%;
}

.cart-toatl-price {
  width: 40%;
  display: inline-block;
  height: 100%;
  position: relative;
  left: -135rpx;
  font-size:28rpx;

}

.allText {
  width: 30%;
  display: inline-block;
  height: 100%;
  font-size: 28rpx;
}
