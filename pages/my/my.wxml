<!--index.wxml-->
<view class="container">
  <view wx:if="{{hasUserInfo==false}}">
    <view class='log-reg'>
      <view class='my-logo'>
        <image src='http://gdbmro.com/image/index/userpho.png'></image>
      </view>
      <navigator url="../module/login/login" hover-class="navigator-hover" class="tologin">
        <text class="user-motto" decode="{{true}}">登陆&nbsp;&nbsp;注册</text>
      </navigator>
    </view>
    <view class='order-sta'>
      <ul>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>待付款</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>代发货</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>待收货</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text> 已完成</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text> 全部订单</text>
        </li>
      </ul>
    </view>
    <view class='remain '>
      <text>余额</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
    <view class='coin'>
      <text>工币</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
    <view class='ticket'>
      <text>抵扣券</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
  </view>
  <!-- 登录状态 -->
  <view wx:if="{{hasUserInfo}}">
    <view class='log-reg'>
      <view class='my-logo'>
        <image src='http://gdbmro.com/image/index/user-pho.jpg' style='border-radius:50%;'></image>
      </view>
      <view class="tologin">
        <text class="user-motto" decode="{{true}}">工电宝 </text>
        <text class="out" bindtap='out'>退出 </text>
      </view>
    </view>
    <view class='order-sta'>
      <ul>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>待付款</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>代发货</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text>待收货</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text> 已完成</text>
        </li>
        <li>
          <image src='../../img/dfk.png'></image>
          <text> 全部订单</text>
        </li>
      </ul>
    </view>
    <view class='remain '>
      <text>余额</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
    <view class='coin'>
      <text>工币</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
    <view class='ticket'>
      <text>抵扣券</text>
      <text class='iconfont icon-youjiantou '></text>
    </view>
  </view>
</view>